/**app.wxss**/


/* 页面设置格式 */
page {
  box-sizing: border-box;
  min-height: 100vh;
  padding: 0 0 100rpx;
  color: #323233;
  font-size: 16px;
  font-family: 'PingFang SC', Helvetica, Arial, sans-serif;
  background: #f7f8fa;
  -webkit-font-smoothing: antialiased;
}

/* 登录样式 */
.logo{
    width: 128rpx;
    height: 128rpx;
    margin: 0rpx auto;
    /* background-color: aqua */
    position: relative;
    top:200rpx;
}
.logoImg{
    width: 100%;
    height: 100%;
}
.loginButton{
    width: 80%;
    margin: 0rpx auto;
    position: relative;
    top: 500rpx;
}
.wechatLogin,.phoneLogin{
    width: 100%;
    height: 80rpx;
    border-radius: 50rpx;
    border: 0rpx;
    outline: none;
}
.wechatLogin button{
    background-color: #70E500;
    border-radius: 50rpx;
    /* border: 1rpx solid #70E500; */
    border: none;
    color: #fff;
}
.phoneLogin{
    margin-top: 40rpx;
}
.phoneLogin button{
    border-radius: 50rpx;
    border: 1rpx solid #70E500;
    background-color: #fff;
    color: #70E500;
}
